<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_l">

    <ImageView
        android:id="@+id/image_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/image_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pic"
            android:text="iphone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_s" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥4000"
            android:textColor="#fc404e"
            android:textSize="@dimen/text_s" />

        <TextView
            android:id="@+id/text_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥5000"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_s" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_reduce"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/num_reduce"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginRight="@dimen/margin_s"
            android:gravity="center_vertical"
            android:text="12"
            android:textSize="@dimen/text_s"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/num_add" />

    </LinearLayout>
</RelativeLayout>