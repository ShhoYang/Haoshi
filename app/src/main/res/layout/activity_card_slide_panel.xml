<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_card_slide_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haoshi.cardslidepanel.CardSlidePanelActivity">

    <com.haoshi.cardslidepanel.CardSlidePanel
        android:id="@+id/card_slide_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bottomMarginTop="40dp"
        app:itemMarginTop="10dp"
        app:yOffsetStep="26dp" >
        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_nolike"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/card_nolike_button" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin_xl"
                android:background="@drawable/card_home_button" />

            <Button
                android:id="@+id/button_like"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="@dimen/margin_xl"
                android:background="@drawable/card_like_button" />
        </LinearLayout>

        <com.haoshi.cardslidepanel.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.haoshi.cardslidepanel.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.haoshi.cardslidepanel.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.haoshi.cardslidepanel.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.haoshi.cardslidepanel.CardSlidePanel>

</RelativeLayout>
