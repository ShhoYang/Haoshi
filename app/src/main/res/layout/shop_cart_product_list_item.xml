<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_m"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height_m"
        android:layout_weight="2"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height_m"
        android:layout_weight="1"
        android:gravity="center_vertical" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_reduce"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/num_reduce" />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginRight="@dimen/margin_s"
            android:text="12"
            android:textSize="@dimen/text_s" />

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/num_add" />

    </LinearLayout>

</LinearLayout>



